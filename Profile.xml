<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="#FCEEEE"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/jersey_regular"
        android:text="Create your profile"
        android:textColor="#CF3453"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Name"
        android:fontFamily="@font/lekton_regular"
        android:text="Name"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:textColor="#CF3453"
        app:layout_constraintTop_toBottomOf="@id/Create"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundMode="none"
        app:boxBackgroundColor="#FFFFFF">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/InputName"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/Name" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/Gender"
        android:fontFamily="@font/lekton_regular"
        android:text="Gender"
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="30dp"
        android:textSize="20sp"
        android:textColor="#CF3453"
        app:layout_constraintTop_toBottomOf="@id/Name"/>

    <Button
        android:id="@+id/ButtonFemale"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/lekton_regular"
        android:text="Female"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Gender"
        android:backgroundTint="#FFFFFF"
        android:textColor="#CF3453"/>

    <Button
        android:id="@+id/ButtonMale"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="5dp"
        android:backgroundTint="#FFFFFF"
        android:textColor="#CF3453"
        android:fontFamily="@font/lekton_regular"
        android:text="Male"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Gender" />

    <Button
        android:text="Continue"
        android:id="@+id/ButtonContinue"
        android:layout_width="250dp"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ButtonFemale"
        android:layout_marginTop="300dp"
        android:fontFamily="@font/lekton_bold"
        android:backgroundTint="#CF3453"/>



</androidx.constraintlayout.widget.ConstraintLayout>
